@page
@using SwiftStock.Models
@model SwiftStock.Pages.Sales.IndexModel
@{
    ViewData["Title"] = "Historique des Ventes - SwiftStock";
}

<div class="container-fluid">
    <!-- En-tête -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-shopping-cart text-primary me-2"></i>
                        Historique des Ventes
                    </h1>
                    <p class="text-muted mb-0">Consultation et gestion des transactions</p>
                </div>
                <div>
                    <a href="/POS" class="btn btn-primary">
                        <i class="fas fa-cash-register me-2"></i>Nouvelle Vente
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="dateFrom" class="form-label">Date de début</label>
                            <input type="date" id="dateFrom" class="form-control" value="@DateTime.Today.AddDays(-7).ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="dateTo" class="form-label">Date de fin</label>
                            <input type="date" id="dateTo" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="paymentMethodFilter" class="form-label">Mode de paiement</label>
                            <select id="paymentMethodFilter" class="form-select">
                                <option value="">Tous</option>
                                <option value="Cash">Espèces</option>
                                <option value="Card">Carte</option>
                                <option value="MobileMoney">Mobile Money</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-grid">
                                <button type="button" class="btn btn-primary" onclick="filterSales()">
                                    <i class="fas fa-search me-1"></i>Filtrer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Ventes
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalSales</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Chiffre d'Affaires
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalRevenue.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Panier Moyen
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AverageSale.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Ventes Aujourd'hui
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TodaySales</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Liste des ventes -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-list me-2"></i>Liste des Ventes
                    </h6>
                </div>
                <div class="card-body p-0">
                    @if (Model.Sales.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>N° Vente</th>
                                        <th>Date</th>
                                        <th>Client</th>
                                        <th>Articles</th>
                                        <th>Total</th>
                                        <th>Paiement</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sale in Model.Sales)
                                    {
                                        <tr>
                                            <td>
                                                <code>@sale.SaleNumber</code>
                                            </td>
                                            <td>
                                                @sale.SaleDate.ToString("dd/MM/yyyy HH:mm")
                                            </td>
                                            <td>
                                                @(sale.CustomerName ?? "Client anonyme")
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@sale.SaleItems.Count articles</span>
                                            </td>
                                            <td>
                                                <span class="fw-bold text-primary">@sale.TotalAmount.ToString("C")</span>
                                            </td>
                                            <td>
                                                @switch (sale.PaymentMethod)
                                                {
                                                    case PaymentMethod.Cash:
                                                        <span class="badge bg-success">Espèces</span>
                                                        break;
                                                    case PaymentMethod.Card:
                                                        <span class="badge bg-primary">Carte</span>
                                                        break;
                                                    case PaymentMethod.MobileMoney:
                                                        <span class="badge bg-info">Mobile Money</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@sale.PaymentMethod</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @switch (sale.Status)
                                                {
                                                    case SaleStatus.Completed:
                                                        <span class="badge bg-success">Terminée</span>
                                                        break;
                                                    case SaleStatus.Cancelled:
                                                        <span class="badge bg-danger">Annulée</span>
                                                        break;
                                                    case SaleStatus.Refunded:
                                                        <span class="badge bg-warning">Remboursée</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-sm btn-outline-info" onclick="viewSaleDetails(@sale.Id)" title="Voir détails">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="printReceipt(@sale.Id)" title="Imprimer reçu">
                                                        <i class="fas fa-print"></i>
                                                    </button>
                                                    @if (sale.Status == SaleStatus.Completed)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-warning" onclick="refundSale(@sale.Id)" title="Rembourser">
                                                            <i class="fas fa-undo"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-shopping-cart fa-4x mb-3"></i>
                            <h4>Aucune vente trouvée</h4>
                            <p>Commencez par effectuer une vente depuis le point de vente.</p>
                            <a href="/POS" class="btn btn-primary">
                                <i class="fas fa-cash-register me-2"></i>Nouvelle Vente
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de détails de vente -->
<div class="modal fade" id="saleDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-receipt me-2"></i>Détails de la Vente
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="saleDetailsContent">
                <!-- Contenu chargé dynamiquement -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="printReceiptFromModal()">
                    <i class="fas fa-print me-2"></i>Imprimer le Reçu
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function filterSales() {
            const dateFrom = $('#dateFrom').val();
            const dateTo = $('#dateTo').val();
            const paymentMethod = $('#paymentMethodFilter').val();
            
            // Recharger la page avec les filtres
            const url = new URL(window.location);
            if (dateFrom) url.searchParams.set('dateFrom', dateFrom);
            if (dateTo) url.searchParams.set('dateTo', dateTo);
            if (paymentMethod) url.searchParams.set('paymentMethod', paymentMethod);
            
            window.location.href = url.toString();
        }

        function viewSaleDetails(saleId) {
            // TODO: Charger les détails de la vente via AJAX
            $('#saleDetailsContent').html('<div class="text-center"><i class="fas fa-spinner fa-spin fa-2x"></i></div>');
            $('#saleDetailsModal').modal('show');
        }

        function printReceipt(saleId) {
            // TODO: Implémenter l'impression du reçu
            alert('Impression du reçu pour la vente #' + saleId);
        }

        function refundSale(saleId) {
            if (confirm('Êtes-vous sûr de vouloir rembourser cette vente ?')) {
                // TODO: Implémenter le remboursement
                alert('Remboursement de la vente #' + saleId);
            }
        }

        function printReceiptFromModal() {
            // TODO: Implémenter l'impression depuis la modal
            alert('Impression du reçu');
        }
    </script>
}

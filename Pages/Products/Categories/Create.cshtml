@page
@model SwiftStock.Pages.Products.Categories.CreateModel
@{
    ViewData["Title"] = "Nouvelle Catégorie";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-tag"></i> Nouvelle Catégorie</h2>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Informations de la catégorie</h5>
                        </div>
                        <div class="card-body">
                            <form method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label asp-for="Input.Name" class="form-label">Nom de la catégorie *</label>
                                            <input asp-for="Input.Name" class="form-control" />
                                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="Input.Code" class="form-label">Code</label>
                                            <input asp-for="Input.Code" class="form-control" placeholder="Ex: ELEC, FOOD" />
                                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.Description" class="form-label">Description</label>
                                    <textarea asp-for="Input.Description" class="form-control" rows="3" placeholder="Description de la catégorie..."></textarea>
                                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.ParentCategoryId" class="form-label">Catégorie parente</label>
                                    <select asp-for="Input.ParentCategoryId" class="form-select">
                                        <option value="">Aucune (catégorie principale)</option>
                                        @foreach (var category in Model.ParentCategories)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Input.ParentCategoryId" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.ImageFile" class="form-label">Image de la catégorie</label>
                                    <input asp-for="Input.ImageFile" type="file" class="form-control" accept="image/*" />
                                    <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
                                    <div class="form-text">Formats acceptés: JPG, PNG, GIF. Taille max: 2MB</div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="Input.IsActive" class="form-check-input" />
                                        <label asp-for="Input.IsActive" class="form-check-label">
                                            Catégorie active
                                        </label>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-page="Index" class="btn btn-secondary">Annuler</a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Créer la catégorie
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Aperçu</h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center">
                                <div id="imagePreview" class="mb-3" style="display: none;">
                                    <img id="previewImg" src="" alt="Aperçu" class="img-fluid rounded" style="max-height: 200px;">
                                </div>
                                <div id="noImagePreview" class="text-muted">
                                    <i class="fas fa-image fa-3x mb-2"></i>
                                    <p>Aucune image sélectionnée</p>
                                </div>
                            </div>
                            
                            <div class="mt-3">
                                <h6>Informations:</h6>
                                <ul class="list-unstyled">
                                    <li><strong>Nom:</strong> <span id="previewName">-</span></li>
                                    <li><strong>Code:</strong> <span id="previewCode">-</span></li>
                                    <li><strong>Type:</strong> <span id="previewType">-</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Conseils</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <i class="fas fa-lightbulb text-warning me-2"></i>
                                    <small>Utilisez des noms courts et clairs</small>
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-lightbulb text-warning me-2"></i>
                                    <small>Le code doit être unique et facile à retenir</small>
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-lightbulb text-warning me-2"></i>
                                    <small>Organisez vos catégories en hiérarchie</small>
                                </li>
                                <li>
                                    <i class="fas fa-lightbulb text-warning me-2"></i>
                                    <small>Une image aide à identifier rapidement la catégorie</small>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Aperçu de l'image
        document.getElementById('Input_ImageFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const preview = document.getElementById('imagePreview');
            const noPreview = document.getElementById('noImagePreview');
            const previewImg = document.getElementById('previewImg');
            
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    preview.style.display = 'block';
                    noPreview.style.display = 'none';
                };
                reader.readAsDataURL(file);
            } else {
                preview.style.display = 'none';
                noPreview.style.display = 'block';
            }
        });

        // Aperçu des informations
        function updatePreview() {
            const name = document.getElementById('Input_Name').value || '-';
            const code = document.getElementById('Input_Code').value || '-';
            const parentId = document.getElementById('Input_ParentCategoryId').value;
            const type = parentId ? 'Sous-catégorie' : 'Catégorie principale';
            
            document.getElementById('previewName').textContent = name;
            document.getElementById('previewCode').textContent = code;
            document.getElementById('previewType').textContent = type;
        }

        // Mettre à jour l'aperçu en temps réel
        document.getElementById('Input_Name').addEventListener('input', updatePreview);
        document.getElementById('Input_Code').addEventListener('input', updatePreview);
        document.getElementById('Input_ParentCategoryId').addEventListener('change', updatePreview);
        
        // Initialiser l'aperçu
        updatePreview();
    </script>
}


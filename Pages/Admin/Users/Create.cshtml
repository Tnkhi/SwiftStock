@page
@model SwiftStock.Pages.Admin.Users.CreateModel
@{
    ViewData["Title"] = "Nouvel Utilisateur";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-plus"></i> Nouvel Utilisateur</h2>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Informations de l'utilisateur</h5>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Input.FirstName" class="form-label">Prénom *</label>
                                            <input asp-for="Input.FirstName" class="form-control" />
                                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Input.LastName" class="form-label">Nom *</label>
                                            <input asp-for="Input.LastName" class="form-control" />
                                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label">Email *</label>
                                    <input asp-for="Input.Email" class="form-control" type="email" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Input.Password" class="form-label">Mot de passe *</label>
                                            <input asp-for="Input.Password" class="form-control" type="password" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Input.ConfirmPassword" class="form-label">Confirmer le mot de passe *</label>
                                            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Input.Role" class="form-label">Rôle *</label>
                                            <select asp-for="Input.Role" class="form-select">
                                                <option value="">Sélectionner un rôle</option>
                                                <option value="Admin">Administrateur</option>
                                                <option value="Manager">Manager</option>
                                                <option value="Cashier">Caissier</option>
                                                <option value="StockManager">Gestionnaire Stock</option>
                                            </select>
                                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Input.DefaultLocationId" class="form-label">Emplacement par défaut</label>
                                            <select asp-for="Input.DefaultLocationId" class="form-select">
                                                <option value="">Aucun emplacement</option>
                                                @foreach (var location in Model.Locations)
                                                {
                                                    <option value="@location.Id">@location.Name</option>
                                                }
                                            </select>
                                            <span asp-validation-for="Input.DefaultLocationId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.PhoneNumber" class="form-label">Téléphone</label>
                                    <input asp-for="Input.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.Address" class="form-label">Adresse</label>
                                    <textarea asp-for="Input.Address" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Input.City" class="form-label">Ville</label>
                                            <input asp-for="Input.City" class="form-control" />
                                            <span asp-validation-for="Input.City" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Input.Country" class="form-label">Pays</label>
                                            <input asp-for="Input.Country" class="form-control" value="Côte d'Ivoire" />
                                            <span asp-validation-for="Input.Country" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.Notes" class="form-label">Notes</label>
                                    <textarea asp-for="Input.Notes" class="form-control" rows="3" placeholder="Notes internes sur cet utilisateur..."></textarea>
                                    <span asp-validation-for="Input.Notes" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="Input.MustChangePassword" class="form-check-input" />
                                        <label asp-for="Input.MustChangePassword" class="form-check-label">
                                            L'utilisateur doit changer son mot de passe à la prochaine connexion
                                        </label>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-page="Index" class="btn btn-secondary">Annuler</a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Créer l'utilisateur
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Informations sur les rôles</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6 class="text-danger">Administrateur</h6>
                                <small class="text-muted">Accès complet à toutes les fonctionnalités du système</small>
                            </div>
                            <div class="mb-3">
                                <h6 class="text-warning">Manager</h6>
                                <small class="text-muted">Gestion des utilisateurs, rapports et paramètres</small>
                            </div>
                            <div class="mb-3">
                                <h6 class="text-info">Caissier</h6>
                                <small class="text-muted">Point de vente et consultation des ventes</small>
                            </div>
                            <div class="mb-3">
                                <h6 class="text-success">Gestionnaire Stock</h6>
                                <small class="text-muted">Gestion des produits et inventaire</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


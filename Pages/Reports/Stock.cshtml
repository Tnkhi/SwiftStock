@page
@model SwiftStock.Pages.Reports.StockModel
@{
    ViewData["Title"] = "Rapports de Stock";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-boxes me-2"></i>Rapports de Stock</h2>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary" onclick="exportToExcel()">
                        <i class="fas fa-file-excel me-1"></i>Excel
                    </button>
                    <button type="button" class="btn btn-outline-danger" onclick="exportToPdf()">
                        <i class="fas fa-file-pdf me-1"></i>PDF
                    </button>
                </div>
            </div>

            <!-- Filtres -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Filtres</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="startDate" class="form-label">Date de début</label>
                            <input type="date" class="form-control" id="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-3">
                            <label for="endDate" class="form-label">Date de fin</label>
                            <input type="date" class="form-control" id="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-3">
                            <label for="reportType" class="form-label">Type de rapport</label>
                            <select class="form-select" id="reportType">
                                <option value="overview">Vue d'ensemble</option>
                                <option value="low-stock">Stock faible</option>
                                <option value="movements">Mouvements</option>
                                <option value="value">Valeur</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="button" class="btn btn-primary" onclick="loadReport()">
                                <i class="fas fa-search me-1"></i>Générer
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Résumé -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title" id="totalProducts">0</h4>
                                    <p class="card-text">Total Produits</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-boxes fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title" id="totalStock">0</h4>
                                    <p class="card-text">Total Stock</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-cubes fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title" id="totalValue">0 €</h4>
                                    <p class="card-text">Valeur Totale</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-euro-sign fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title" id="lowStockCount">0</h4>
                                    <p class="card-text">Stock Faible</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Graphiques -->
            <div class="row mb-4">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Stock par Catégorie</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="stockByCategoryChart" height="100"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Valeur par Catégorie</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="valueByCategoryChart" height="200"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tableaux -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-table me-2"></i>Stock par Catégorie</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped" id="stockByCategoryTable">
                                    <thead>
                                        <tr>
                                            <th>Catégorie</th>
                                            <th>Produits</th>
                                            <th>Stock</th>
                                            <th>Valeur</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-table me-2"></i>Produits en Stock Faible</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped" id="lowStockTable">
                                    <thead>
                                        <tr>
                                            <th>Produit</th>
                                            <th>Stock</th>
                                            <th>Min</th>
                                            <th>Statut</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let stockByCategoryChart, valueByCategoryChart;

        function loadReport() {
            const reportType = document.getElementById('reportType').value;
            
            if (reportType === 'overview') {
                loadStockOverview();
            } else if (reportType === 'low-stock') {
                loadLowStockReport();
            } else if (reportType === 'movements') {
                loadStockMovements();
            } else if (reportType === 'value') {
                loadStockValue();
            }
        }

        function loadStockOverview() {
            fetch('/api/reports/stock')
                .then(response => response.json())
                .then(data => {
                    updateSummary(data.summary);
                    updateStockByCategoryChart(data.stockByCategory);
                    updateStockByCategoryTable(data.stockByCategory);
                })
                .catch(error => console.error('Erreur:', error));

            loadLowStockReport();
        }

        function loadLowStockReport() {
            fetch('/api/reports/stock/low-stock')
                .then(response => response.json())
                .then(data => {
                    updateLowStockTable(data.lowStockProducts);
                    document.getElementById('lowStockCount').textContent = data.summary.lowStockCount;
                })
                .catch(error => console.error('Erreur:', error));
        }

        function loadStockMovements() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;

            fetch(`/api/reports/stock/movements?startDate=${startDate}&endDate=${endDate}`)
                .then(response => response.json())
                .then(data => {
                    // Mettre à jour les graphiques et tableaux pour les mouvements
                    console.log('Mouvements de stock:', data);
                })
                .catch(error => console.error('Erreur:', error));
        }

        function loadStockValue() {
            fetch('/api/reports/stock/value')
                .then(response => response.json())
                .then(data => {
                    updateSummary(data.summary);
                    updateValueByCategoryChart(data.valueByCategory);
                    updateStockByCategoryTable(data.valueByCategory);
                })
                .catch(error => console.error('Erreur:', error));
        }

        function updateSummary(summary) {
            document.getElementById('totalProducts').textContent = summary.totalProducts;
            document.getElementById('totalStock').textContent = summary.totalStock;
            document.getElementById('totalValue').textContent = summary.totalValue.toFixed(2) + ' €';
        }

        function updateStockByCategoryChart(stockByCategory) {
            const ctx = document.getElementById('stockByCategoryChart').getContext('2d');
            
            if (stockByCategoryChart) {
                stockByCategoryChart.destroy();
            }

            stockByCategoryChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: stockByCategory.map(c => c.categoryName),
                    datasets: [{
                        label: 'Stock',
                        data: stockByCategory.map(c => c.totalStock),
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        function updateValueByCategoryChart(valueByCategory) {
            const ctx = document.getElementById('valueByCategoryChart').getContext('2d');
            
            if (valueByCategoryChart) {
                valueByCategoryChart.destroy();
            }

            valueByCategoryChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: valueByCategory.map(c => c.categoryName),
                    datasets: [{
                        data: valueByCategory.map(c => c.totalValue),
                        backgroundColor: [
                            '#FF6384',
                            '#36A2EB',
                            '#FFCE56',
                            '#4BC0C0',
                            '#9966FF',
                            '#FF9F40'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        }

        function updateStockByCategoryTable(stockByCategory) {
            const tbody = document.querySelector('#stockByCategoryTable tbody');
            tbody.innerHTML = '';

            stockByCategory.forEach(category => {
                const row = tbody.insertRow();
                row.insertCell(0).textContent = category.categoryName;
                row.insertCell(1).textContent = category.productCount;
                row.insertCell(2).textContent = category.totalStock;
                row.insertCell(3).textContent = category.totalValue.toFixed(2) + ' €';
            });
        }

        function updateLowStockTable(lowStockProducts) {
            const tbody = document.querySelector('#lowStockTable tbody');
            tbody.innerHTML = '';

            lowStockProducts.forEach(product => {
                const row = tbody.insertRow();
                row.insertCell(0).textContent = product.productName;
                row.insertCell(1).textContent = product.currentStock;
                row.insertCell(2).textContent = product.minStockLevel;
                
                const statusCell = row.insertCell(3);
                if (product.isOutOfStock) {
                    statusCell.innerHTML = '<span class="badge bg-danger">Rupture</span>';
                } else {
                    statusCell.innerHTML = '<span class="badge bg-warning">Faible</span>';
                }
            });
        }

        function exportToExcel() {
            const reportType = document.getElementById('reportType').value;
            window.open(`/api/reports/export/excel?reportType=stock&startDate=${document.getElementById('startDate').value}&endDate=${document.getElementById('endDate').value}`, '_blank');
        }

        function exportToPdf() {
            const reportType = document.getElementById('reportType').value;
            window.open(`/api/reports/export/pdf?reportType=stock&startDate=${document.getElementById('startDate').value}&endDate=${document.getElementById('endDate').value}`, '_blank');
        }

        // Charger le rapport au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            loadReport();
        });
    </script>
}

